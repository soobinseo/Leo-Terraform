{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "keybinds": {
        "messages_half_page_up": "pageup",
        "messages_half_page_down": "pagedown",
        "messages_page_up": "ctrl+alt+u",
        "messages_page_down": "ctrl+alt+d",
        "messages_first": "ctrl+g,home",
        "messages_last": "ctrl+alt+g,end",
        "messages_previous": "ctrl+pageup",
        "messages_next": "ctrl+pagedown",
        "input_line_home": "home",
        "input_line_end": "end"
    },
    "tui": {
        "scroll_speed": 1.0,
        "scroll_acceleration": {
            "enabled": false
        }
    }
}